{
   "tool": "zoic",
   "version": "2.0.0",
   "platforms": ["darwin", "linux", "windows"],
   "requires": ["arnold"],
   "environment":
   {
      "ZOIC_ROOT": {"strict": True,
                    "abs": True,
                    "common": "@path/@tool/@version"},
      "ARNOLD_PLUGIN_PATH": "${ZOIC_ROOT}/arnold/${ARNOLD_VERSION}/@platform"
   },
   "optional":
   {
      "maya":
      {
         "MTOA_TEMPLATES_PATH": "${ZOIC_ROOT}/maya/ae",
         "MAYA_SCRIPT_PATH": "${ZOIC_ROOT}/maya/scripts"
      }
   }
}